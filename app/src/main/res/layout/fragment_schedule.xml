<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".app.presentation.screen.tab.schedule.ScheduleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/schedule_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/water_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_48sdp"
            android:background="@drawable/bg_white"
            android:elevation="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/water"
                style="@style/TextSemiBold.LG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="@string/water_reminder"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swt_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:thumb="@drawable/thumb_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/water"
                app:track="@drawable/track_default" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/water_time_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/swt_water">

                <RadioGroup
                    android:id="@+id/radio_water"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/radio1"
                        style="@style/TextBase.SM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radio_default"
                        android:paddingStart="@dimen/_6sdp"
                        android:text="@string/_1"
                        android:theme="@style/RadioButtonStyle"
                        tools:ignore="RtlSymmetry" />

                    <RadioButton
                        android:id="@+id/radio2"
                        style="@style/TextBase.SM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radio_default"
                        android:paddingStart="@dimen/_6sdp"
                        android:text="@string/_2"
                        android:theme="@style/RadioButtonStyle"
                        tools:ignore="RtlSymmetry" />

                    <RadioButton
                        android:id="@+id/radio3"
                        style="@style/TextBase.SM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radio_default"
                        android:paddingStart="@dimen/_6sdp"
                        android:text="@string/_3"
                        android:theme="@style/RadioButtonStyle"
                        tools:ignore="RtlSymmetry" />

                    <RadioButton
                        android:id="@+id/radio4"
                        style="@style/TextBase.SM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radio_default"
                        android:paddingStart="@dimen/_6sdp"
                        android:text="@string/_4"
                        android:theme="@style/RadioButtonStyle"
                        tools:ignore="RtlSymmetry" />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img_water"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="-48dp"
            android:background="@color/blue"
            android:elevation="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_water"
            app:layout_constraintBottom_toTopOf="@+id/water_layout"
            app:layout_constraintStart_toStartOf="@+id/water_layout" />

