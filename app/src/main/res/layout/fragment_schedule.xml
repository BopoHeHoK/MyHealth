                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingBottom="@dimen/_8sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/swt_food">

                <ImageView
                    android:id="@+id/img_food_time1"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:src="@drawable/ic_breakfast"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time1"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/food_time1"
                    style="@style/TextBase.MD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/breakfast"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time1"
                    app:layout_constraintStart_toEndOf="@+id/img_food_time1"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time1" />

                <ImageView
                    android:id="@+id/img_clock_food_time1"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time1"
                    app:layout_constraintEnd_toStartOf="@+id/tv_food_time1"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time1"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_food_time1"
                    style="@style/TextBase.MD"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/_7_00"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toStartOf="@+id/cb_food_time1"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/cb_food_time1"
                    style="@style/TextBase.MD"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox_default"
                    android:button="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time1" />

                <ImageView
                    android:id="@+id/img_food_time2"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_snack"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time2"
                    app:layout_constraintEnd_toEndOf="@+id/img_food_time1"
                    app:layout_constraintStart_toStartOf="@+id/img_food_time1"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time2"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/food_time2"
                    style="@style/TextBase.MD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snack"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time2"
                    app:layout_constraintStart_toStartOf="@+id/food_time1"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time2" />

                <ImageView
                    android:id="@+id/img_clock_food_time2"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time2"
                    app:layout_constraintEnd_toStartOf="@+id/tv_food_time2"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time2"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_food_time2"
                    style="@style/TextBase.MD"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/_10_00"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_food_time1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_food_time1" />

                <CheckBox
                    android:id="@+id/cb_food_time2"
                    style="@style/TextBase.MD"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox_default"
                    android:button="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time2" />

                <ImageView
                    android:id="@+id/img_food_time3"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_lunch"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time3"
                    app:layout_constraintEnd_toEndOf="@+id/img_food_time2"
                    app:layout_constraintStart_toStartOf="@+id/img_food_time2"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time3"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/food_time3"
                    style="@style/TextBase.MD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lunch"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time3"
                    app:layout_constraintStart_toStartOf="@+id/food_time2"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time3" />

                <ImageView
                    android:id="@+id/img_clock_food_time3"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time3"
                    app:layout_constraintEnd_toStartOf="@+id/tv_food_time3"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time3"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_food_time3"
                    style="@style/TextBase.MD"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/_13_00"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_food_time2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_food_time2" />

                <CheckBox
                    android:id="@+id/cb_food_time3"
                    style="@style/TextBase.MD"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox_default"
                    android:button="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time3" />

                <ImageView
                    android:id="@+id/img_food_time4"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_afternoon_snack"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time4"
                    app:layout_constraintEnd_toEndOf="@+id/img_food_time3"
                    app:layout_constraintStart_toStartOf="@+id/img_food_time3"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time4"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/food_time4"
                    style="@style/TextBase.MD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/afternoon_snack"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time4"
                    app:layout_constraintStart_toStartOf="@+id/food_time3"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time4" />

                <ImageView
                    android:id="@+id/img_clock_food_time4"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time4"
                    app:layout_constraintEnd_toStartOf="@+id/tv_food_time4"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time4"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_food_time4"
                    style="@style/TextBase.MD"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/_16_00"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_food_time3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_food_time3" />

                <CheckBox
                    android:id="@+id/cb_food_time4"
                    style="@style/TextBase.MD"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox_default"
                    android:button="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time4" />

                <ImageView
                    android:id="@+id/img_food_time5"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_dinner"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time5"
                    app:layout_constraintEnd_toEndOf="@+id/img_food_time4"
                    app:layout_constraintStart_toStartOf="@+id/img_food_time4"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time5"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/food_time5"
                    style="@style/TextBase.MD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dinner"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time5"
                    app:layout_constraintStart_toStartOf="@+id/food_time4"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time5" />

                <ImageView
                    android:id="@+id/img_clock_food_time5"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time5"
                    app:layout_constraintEnd_toStartOf="@+id/tv_food_time5"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time5"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/tv_food_time5"
                    style="@style/TextBase.MD"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/_19_00"
                    android:textAlignment="textEnd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_food_time4"
                    app:layout_constraintTop_toBottomOf="@+id/tv_food_time4" />

                <CheckBox
                    android:id="@+id/cb_food_time5"
                    style="@style/TextBase.MD"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/checkbox_default"
                    android:button="@null"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_food_time5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_food_time5" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="-48dp"
            android:background="@color/yellow_brown"
            android:elevation="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_food"
            app:layout_constraintBottom_toTopOf="@+id/food_layout"
            app:layout_constraintStart_toStartOf="@+id/food_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/medicine_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/bg_white"
            android:elevation="@dimen/_2sdp"
            android:paddingBottom="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food_layout">

            <TextView
                android:id="@+id/medicine"
                style="@style/TextSemiBold.LG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="@string/medicine_reminder"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swt_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:thumb="@drawable/thumb_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/medicine"
                app:track="@drawable/track_default" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_medicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/swt_medicine" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_medicine"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/ic_plus"
                android:elevation="@dimen/_4sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_medicine" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img_medicine"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="-48dp"
            android:background="@color/green"
            android:elevation="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_medicine"
            app:layout_constraintBottom_toTopOf="@+id/medicine_layout"
            app:layout_constraintStart_toStartOf="@+id/medicine_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weight_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_48sdp"
            android:background="@drawable/bg_white"
            android:elevation="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medicine_layout">

            <TextView
                android:id="@+id/weight"
                style="@style/TextSemiBold.LG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="@string/weight_reminder"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swt_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:thumb="@drawable/thumb_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weight"
